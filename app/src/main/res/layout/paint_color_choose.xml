<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="250dp"
    android:layout_height="320dp"
    android:layout_gravity="center"
    android:background="@drawable/radius_rectangle">

    <com.mylife.draw.ColorPickView
        android:id="@+id/color_pick_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"

        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/pick_color"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <Button
            android:id="@+id/choose_color"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/costum_button"
            android:text="确定"/>
        <Button
            android:id="@+id/cancel_choose_color"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/costum_button"
            android:text="取消"/>

    </LinearLayout>
</LinearLayout>